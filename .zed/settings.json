{
  "formatter": null,
  "file_types": {
    "typescript": ["*.ts"],
    "typescriptreact": ["*.tsx"]
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": true,
        "cargo": {
          "allTargets": false
        },
        "check": {
          "workspace": false
        },
        "rust": {
          "analyzerTargetDir": true
        }
      }
    }
  },
  "languages": {
    "TSX": {
      "formatter": [],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "formatter": [],
      "format_on_save": "on",
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "Rust": {
      "format_on_save": "on",
      "formatter": "language_server"
    }
  }
}
